{
  "name": "server",
  "version": "1.0.0",
  "description": "Free Mentor Web Application",
  "main": "app.js",
  "directories": {
    "test": "tests"
  },
  "nyc": {
    "exclude": [
      "server/tests/*",
      "server.js"
    ]
  },
  "scripts": {
    "test": "nyc mocha --require @babel/register ./server/tests/* --timeout 10000 --exit || true",
    "coverage": "nyc --reporter=lcov --reporter=text-lcov npm test | coveralls",
    "start": "node app.js",
    "dev:server": "nodemon app.js",
    "migrate": "babel-node ./server/models/tables.js",
    "render-users": "babel-node ./server/models/user.js",
    "render-sessions": "babel-node ./server/models/session.js",
    "render-reviews": "babel-node ./server/models/review.js",
    "dummy:data": "npm run render-users && npm run render-sessions && npm run render-reviews"
  },
  "engines": {
    "node": "12.4.0"
  },
  "author": "Ericky Vand",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.15",
    "@babel/node": "^7.13.13",
    "@babel/preset-env": "^7.13.15",
    "@babel/register": "^7.13.14",
    "@hapi/joi": "^15.1.1",
    "bcrypt": "^5.0.1",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "cors": "^2.8.5",
    "coveralls": "^3.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^6.2.3",
    "nyc": "^14.1.1",
    "pg": "^7.18.2",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1"
  }
}
